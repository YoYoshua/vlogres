<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>vlogres.pl</title>

    <!--favicon-->
    <link rel="icon" type="image/x-icon" href="~/Content/Images/favicon.ico" />

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />

    <!--Import site font-->
    <link href="https://fonts.googleapis.com/css?family=Trocchi" rel="stylesheet">

    <!--Import Google Icon Font-->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!--Import materialize.css-->
    <link type="text/css" rel="stylesheet" href="~/Content/CSS/materialize.min.css" media="screen,projection" />

    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
        * {
            font-family: 'Trocchi', serif!important;
        }

        html, body {
            margin: 0px;
            padding: 0px;
        }

        body {
            background: url("../../Content/Images/background.jpg") no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            list-style-position: inside;
        }

        ol {
           padding-left: 0;
        }

        li {
            font-size: 14px;
            padding: 4px 0 4px 0;
        }

        .header-logo {
            width: 60%;
            height: auto;
        }

        .play-button {
            width: 15%;
            height: auto;
            padding-top: 5%;
            padding-bottom: 10%;
        }

        .wrapper {
            padding-bottom: 10%;
        }

        .footer {
            background: url("../../Content/Images/background.jpg")no-repeat center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            height: 10%;
            background-color: transparent;
            color: white;
            text-align: left;
        }

        .footer-text {
            padding: 0 0 0 5%;
            font-size: 20px;
        }

        @@media only screen and (max-width:768px) {
            .play-button {
                width: 30%;
                height: auto;
                padding-top: 10%;
                padding-bottom: 10%;
            }

            .header-logo {
                width: 100%;
                height: auto;
            }
        }
    </style>
</head>
<body>
    <!--Navbar-->
    <nav class="transparent z-depth-0">
        <div class="nav-wrapper">
            <a href="@Url.Action("Index", "Home")" class="brand-logo center"><img src="~/Content/Images/logo.png" class="header-logo" /></a>
        </div>
    </nav>

    <br />
    <br />

    <!--Main site content-->
    <div class="row white-text wrapper center-align">
        <div class="col s12 m6 l6">
            <div class="section">
                <h4>Oglądaj:</h4>
                <a href="https://www.youtube.com/channel/UCYzsPBmNVdsf-VX0O2TiuXw/videos">
                    <img class="responsive-img play-button" src="~/Content/Images/play-button.png" />
                </a>
            </div>
        </div>
        <div class="col s12 m6 l6">
            @RenderBody()
        </div>
    </div>

    <!--Footer-->
    <footer class="page-footer footer">
        <p class="footer-text">Kontakt: info@vlogres.pl</p>
    </footer>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <!--JavaScript at end of body for optimized loading-->
    <script type="text/javascript" src="~/Content/JS/materialize.min.js"></script>
</body>
</html>